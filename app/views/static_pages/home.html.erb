<% if logged_in? %>
  <div class="upper">
    <table class="kintai_table1" border="1" width="100%" cellspacing="0" cellpadding="5" bordercolor="silver">
      <tr>
        <th>
          <%= link_to "←" ,"#",class: "btn line"%>
          <%= Date.today.year.to_s+"年"+Date.today.month.to_s+"月"+" "+"時間管理表" %>
          <%= link_to "→" ,"#",class: "btn line"%>
        </th>
        <th>
          <%= "指定勤務時間" +" "+ "8.00"%>
        </th>
        <th colspan="3" rowspan="">
          <%= "7.50" + "基本時間" %>
        </th>
        <th colspan="3" rowspan="">
          <%= "初日" + "　"+ Date.today.month.to_s + "/" + Date.today.day.to_s %>
        </th>
      </tr>
      <tr>
        <th>
          <%= "所属" %>
        </th>
        <th>
          <%= "氏名"+"　" + @user.name %>
        </th>
        <th>
          <%= "コード" %>
        </th>
        <th>
          <%= " " %>
        </th>
        <th>
          <%= "出勤日数" %>
        </th>
        <th>
          <%= "締め" +"　"+ Date.today.end_of_month.month.to_s + "/" + Date.today.end_of_month.day.to_s %>
        </th>
      </tr>
    </table>
  </div>
  <div class="botton">
    <%= link_to "勤怠を編集", login_path, class: "btn btn-lg btn-primary" %>
  </div>
  <div class="center">
    <table class="kintai_table1" border="1" width="100%" cellspacing="0" cellpadding="5" bordercolor="#333333">
      <%= "日付" %>
      <%= "曜日" %>
      <div class="line1">
        <div class="come_out">
          <%= "出社" %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>勤怠システム</h1>
    <%= link_to "ログイン", login_path, class: "btn btn-lg btn-primary" %>
    <h2>
      アカウント作成は
      <%= link_to "こちら", signup_path %>
      から
    </h2>  
  </div>
<% end %>