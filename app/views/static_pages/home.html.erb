<% if logged_in? %>
  <div class="upper">
    <table class="kintai_table1" border="1" width="100%" cellspacing="0" cellpadding="5" bordercolor="silver">
      <!-- 表1-1行目 -->
      <tr>
        <th>
          <%= link_to "←" ,"#",class: "btn line"%>
          <%= Date.today.year.to_s+"年"+Date.today.month.to_s+"月"+" "+"時間管理表" %>
          <%= link_to "→" ,"#",class: "btn line"%>
        </th>
        <th>
          <%= "指定勤務時間" +" "%>
          <%= sprintf "%.2f",ntime %>
        </th>
        <th colspan="3" rowspan="">
          <%= sprintf "%.2f",dtime %>
          <%= "基本時間" +" "%>
        </th>
        <th colspan="3" rowspan="">
          <%= "初日" + "　"+ Date.today.month.to_s + "/" + "1" %>
        </th>
      </tr>
      <!-- 表1-2行目 -->
      <tr>
        <th>
          <%= "所属" %>
        </th>
        <th>
          <%= "氏名"+"　" + @user.name %>
        </th>
        <th>
          <%= "コード" %>
        </th>
        <th>
          <%= " " %>
        </th>
        <th>
          <%= "出勤日数" %>
        </th>
        <th>
          <%= "締め" +"　"+ Date.today.end_of_month.month.to_s + "/" + Date.today.end_of_month.day.to_s %>
        </th>
      </tr>
    </table>
  </div>
  <!-- 編集ボタン-->
  <div class="botton">
    <%= link_to "勤怠を編集", login_path, class: "btn btn-lg btn-primary" %>
  </div>
  <div class="center">
    <!-- 勤怠カレンダー-->
    <table class="kintai_table1" border="1" width="100%" cellspacing="0" cellpadding="5" bordercolor="silver">
      <tr>
        <th colspan="3" rowspan="2">
          <%= "日付" %>
        </th>
        <th colspan="3" rowspan="2">
          <%= "曜日" %>
        </th>
        <th colspan="3" rowspan="">
          <%= "出社"%>
        </th>
        <th colspan="3" rowspan="">
          <%= "退社"%>
        </th>
        <th colspan="3" rowspan="2">
          <%= "在社時間"%>
        </th>
        <th colspan="3" rowspan="2">
          <%= "備考"%>
        </th>
        <th colspan="3" rowspan="2">
          <%= "残業表示"%>
        </th>
        <th colspan="3" rowspan="2">
          <%= "指示者"%>
        </th>
      </tr>
      <tr>
        <th>
          <%= "時"%>
        </th>
        <th>
          <%= "分"%>
        </th>
        <th>
          <%= "　"%>
        </th>
        <th>
          <%= "時"%>
        </th>
        <th>
          <%= "分"%>
        </th>
        <th>
          <%= "　"%>
        </th>
      </tr>
      <!--行を初日から締め日まで繰り返しで作成する-->
      <% for day in 1..Date.today.end_of_month.day do %>
        <tr>
          <th colspan="3" rowspan="">
            <%= Date.today.month.to_s + "/" + day.to_s %>
          </th>
          <% youbi = Date.today.beginning_of_month.wday %>
          <th colspan="3" rowspan="">
            <% youbi+=(day-1) %>
            <%=  wdays(youbi) %>
          </th>
          <th>
            <%= "　"%>
          </th>
          <th>
            <%= "　"%>
          </th>
          <th>
            <% if Date.today.day==day %>
              <%= link_to "出社" ,"#",class: "button stamp_btn" %>
            <% end %>
          </th>
          <th>
            <%= "　"%>
          </th>
          <th>
            <%= "　"%>
          </th>
          <th>
            <%= "　"%>
          </th>
          <th colspan="3" rowspan="">
            <%= "　"%>
          </th>
          <th colspan="3" rowspan="">
            <%= "　"%>
          </th>
          <th colspan="3" rowspan="">
            <%= "　"%>
          </th>
          <th colspan="3" rowspan="">
            <%= "　"%>
          </th>
        </tr>
      <% end %>
    </table>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>勤怠システム</h1>
    <%= link_to "ログイン", login_path, class: "btn btn-lg btn-primary" %>
    <h2>
      アカウント作成は
      <%= link_to "こちら", signup_path %>
      から
    </h2>  
  </div>
<% end %>